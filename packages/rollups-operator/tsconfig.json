{
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "inlineSources": false,
        "isolatedModules": true,
        "module": "ES2020",
        "moduleResolution": "node",
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "outDir": "dist",
        "preserveWatchOutput": true,
        "rootDir": "src",
        "skipLibCheck": true,
        "strict": true,
        "target": "es2020"
    },
    "ts-node": {
        "esm": true
    }
}
